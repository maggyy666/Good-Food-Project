<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Submit a Recipe - GoodFood</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <link href="~/css/RegisterStyle.css" rel="stylesheet" />
</head>
<body>
    <header>
        <nav class="navbar">
            <div class="navbar-container">
                <a class="navbar-title" href="#">GOODFOODMVC</a>
                <ul class="navbar-menu">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Recipes", "Recipes", "Home")</li>
                    <li>@Html.ActionLink("Add Recipe", "AddRecipe", "Home")</li>
                    <li>@Html.ActionLink("Join Us", "Register", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink(User.Identity.IsAuthenticated ? User.Identity.Name : "Guest", "Profile", "Home")</li>
                </ul>
            </div>
        </nav>
    </header>
    <main class="main-content">
        <div class="content-wrapper">
            <div class="form-section">
                <div class="form-container">
                    <h2 class="form-title">Submit a Recipe</h2>
                    <form asp-action="SubmitData" method="post" enctype="multipart/form-data">
                        <div class="form-group">
                            <label for="title">Title</label>
                            <input type="text" class="form-control" id="title" name="title" required />
                        </div>
                        <div class="form-group">
                            <label for="description">Description</label>
                            <textarea class="form-control" id="description" name="description" rows="5" required></textarea>
                        </div>
                        <div class="form-group">
                            <label for="imageFile">Upload Image</label>
                            <input type="file" class="form-control" id="imageFile" name="imageFile" accept="image/*" required />
                        </div>
                        <button type="submit" class="btn-submit">Submit</button>
                    </form>

                    @if (ViewBag.Message != null)
                    {
                        <div class="alert-message">@ViewBag.Message</div>
                    }
                </div>
            </div>
            <div class="info-section">
                <h1 class="info-title">Enjoy your meals, with us!</h1>
                <p class="info-subtitle">Join our amazing community and discover new recipes every day.</p>
            </div>
        </div>
    </main>
    <footer class="footer">
        <div class="footer-container">
            <p>Powered by XD | &copy; 2024</p>
        </div>
    </footer>
</body>
</html>
