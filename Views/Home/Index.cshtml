@{
    var username = ViewBag.Username as string;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>GoodFood - Home</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <link href="~/css/site.css?v=@DateTime.Now.Ticks" rel="stylesheet" />
</head>
<body>
    <header>
        <nav class="navbar">
            <div class="navbar-container">
                <a class="navbar-title" href="#">GOODFOODMVC</a>
                <ul class="navbar-menu">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Recipes", "Recipes", "Home")</li>
                    <li>@Html.ActionLink("Add Recipe", "AddRecipe", "Home")</li>
                    <li>@Html.ActionLink("Join Us", "Register", "Home")</li>
                    <li>
                        @if (username == "Guest")
                        {
                            @Html.ActionLink("Guest", "Login", "Home")
                        }
                        else
                        {
                            @Html.ActionLink(username, "Profile", "Home")
                        }
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <main class="main-content">
        <div class="content-wrapper">
            <section class="welcome-section">
                <h2>Enjoy your meals,</h2>
                <h2>with us!</h2>
                <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Convallis convallis tellus id interdum velit laoreet. Duis accumsan sit amet nulla.</p>
                <a href="@Url.Action("Register", "Home")" class="join-link">Join Us!</a>
            </section>
            <div class="image-section">
                <img src="~/images/eating.png" alt="Dining Image" class="dining-image" />
            </div>
        </div>
    </main>
    <footer class="footer">
        <div class="footer-container">
            <p>Powered by XD | &copy; 2024</p>
        </div>
    </footer>
</body>
</html>
